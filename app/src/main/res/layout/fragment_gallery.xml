<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bgclr2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/iconn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/img12"
            />
        <TextView
            android:id="@+id/hari"
            android:text="24-25 MEI 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/AquaDanon"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iconn"/>
        <TextView
            android:id="@+id/kegiatan"
            android:text="Hari Raya Idul Fitri"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/hari"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iconn"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iconn2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/img12"
            android:layout_below="@+id/iconn"
            />
        <TextView
            android:id="@+id/hari2"
            android:text="30 MEI-1JUNI 2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/AquaDanon"
            android:textStyle="bold"
            android:layout_below="@+id/iconn"
            android:layout_toRightOf="@+id/iconn2"/>
        <TextView
            android:id="@+id/kegiatan2"
            android:text="Selesai Self Distancing &amp; Awal Perkuliahan"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/hari2"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iconn2"/>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>